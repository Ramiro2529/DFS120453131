<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    {{#if errorMessage}}
    <div class="alert alert-danger">{{errorMessage}}</div>
{{/if}}

{{#if successMessage}}
    <div class="alert alert-success">{{successMessage}}</div>
{{/if}}

     <div class='container '>
         <h1>Lista de Productos</h1> 
         <a href="/productos/agregarProducto" type="button" class="btn btn-dark">Nuevo Producto</a>
         <br><br>
       <table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre Productos</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Fecha creacion</th>
      <th scope="col">Precio</th>
      <th scope="col">Cantidad</th>
      <th scope="col">Editar</th>
      <th scope="col">Eliminar</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">{{_id}}</th>
      <td>{{nombreProducto}}</td>
      <td>{{descripcion}}</td>
      <td>{{created_at}}</td>
      <td>{{precio}}</td>
      <td>{{cantidad}}</td>
      <td><a href="/productos/editarProducto/{{_id}}">
          <span class="glyphicon glyphicon-edit"></span>
        </a></td>
      <td>  <a href="/productos/eliminarProducto/{{_id}}">
          <span class="glyphicon glyphicon-remove"></span>
        </a></td>
    </tr>
      {{else}}
      <br><br>
        <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">No se encontraron productos</h5>
            
            <p class="card-text">Verifique con su administrador de sistemas.</p>
        
        </div>
        </div>
        <br>
{{/each}}

  </tbody>
</table>


    </div>
    
</body>
</html>